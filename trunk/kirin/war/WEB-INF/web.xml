<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>authService</servlet-name>
    <servlet-class>kirin.server.AuthService</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>loginService</servlet-name>
    <servlet-class>kirin.server.LoginServiceImpl</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>kirinService</servlet-name>
    <servlet-class>kirin.server.KirinServiceImpl</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>authService</servlet-name>
    <url-pattern>/auth</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>loginService</servlet-name>
    <url-pattern>/kirin/login</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>kirinService</servlet-name>
    <url-pattern>/kirin/kirin</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  
</web-app>
