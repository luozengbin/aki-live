<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
                         "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
	<!-- Servlets -->
	<servlet>
		<servlet-name>tqqAuthServlet</servlet-name>
		<servlet-class>com.appspot.piment.rpc.TQQAuthServiceImpl</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>tqqWeiboServlet</servlet-name>
		<servlet-class>com.appspot.piment.rpc.TQQWeiboServiceImpl</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>job1001</servlet-name>
		<servlet-class>com.appspot.piment.jobs.Job1001</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>sinaAuthServlet</servlet-name>
		<servlet-class>com.appspot.piment.rpc.SinaAuthServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>tqqAuthServlet</servlet-name>
		<url-pattern>/piment/tqq/auth</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>tqqWeiboServlet</servlet-name>
		<url-pattern>/piment/tqq/weibo</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>sinaAuthServlet</servlet-name>
		<url-pattern>/piment/sina/auth</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>job1001</servlet-name>
		<url-pattern>/corns/job1001</url-pattern>
	</servlet-mapping>
	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>piment.html</welcome-file>
	</welcome-file-list>
</web-app>
